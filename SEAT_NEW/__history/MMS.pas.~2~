//     ShowMessage('jpg파일만 전송가능합니다');
//   edit_img1.Text := '';
//   Exit;
//   end;
     CopyFile(Pchar(OpenDialog1.FileName),Pchar('\\CAPS\mmsimage\'+ExtractFileName(OpenDialog1.FileName)),False);

     filename :=   ExtractFileName(OpenDialog1.FileName);
     edit_img1.Text := filename;
   end;

end;

